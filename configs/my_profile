export PYENV_ROOT="$HOME/.pyenv"
[[ -d $PYENV_ROOT/bin ]] && export PATH="$PYENV_ROOT/bin:$PATH"
eval "$(pyenv init -)"

export PATH=/home/$USER/Documents/apps/go/bin:$PATH
export PATH=/home/$USER/Documents/apps/flutter/bin:$PATH
export PATH=/home/$USER/Documents/apps/bin:$PATH


export NVM_DIR="$HOME/.nvm"
[ -s "$NVM_DIR/nvm.sh" ] && \. "$NVM_DIR/nvm.sh"  # This loads nvm
[ -s "$NVM_DIR/bash_completion" ] && \. "$NVM_DIR/bash_completion"  # This loads nvm bash_completion


alias run_venv="source venv/bin/activate"
alias sync_gdrive=rclone --progress sync gdrive:/ ~/Documents/google_drive
